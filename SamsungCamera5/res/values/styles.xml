<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Activity.WithActionBar.FullScreen" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="AppActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@drawable/gradient_effect_for_button</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:contentInsetStart">0.0dip</item>
    </style>
    <style name="CustomTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
