<favorites xmlns:launcher="http://schemas.android.com/apk/res/com.sec.android.app.launcher">

    <home>
        <!--  screen [0]  -->
        <!-- .appwidget.WeatherAppWidget -->
        <appwidget
            launcher:packageName="com.sec.android.daemonapp" 
            launcher:className="com.sec.android.daemonapp.appwidget.WeatherAppWidget2x1" 
            launcher:screen="0" 
            launcher:x="0" 
            launcher:y="0" 
            launcher:spanX="2" 
            launcher:spanY="1" />
			
        <!-- Samsung Pay -->
        <favorite
            launcher:packageName="com.samsung.android.spay" 
            launcher:className="com.samsung.android.spay.ui.SpayMainActivity" 
            launcher:screen="0" 
            launcher:x="0" 
            launcher:y="3" />
			
        <!-- Internet -->
        <favorite
            launcher:packageName="com.sec.android.app.sbrowser" 
            launcher:className="com.sec.android.app.sbrowser.SBrowserMainActivity" 
            launcher:screen="0" 
            launcher:x="1" 
            launcher:y="3" />
			
        <!-- Camera -->
        <favorite
            launcher:packageName="com.sec.android.app.camera" 
            launcher:className="com.sec.android.app.camera.Camera" 
            launcher:screen="0" 
            launcher:x="2" 
            launcher:y="3" />
			
        <!-- Gallery -->
        <favorite
            launcher:packageName="com.sec.android.gallery3d" 
            launcher:className="com.sec.android.gallery3d.app.GalleryOpaqueActivity" 
            launcher:screen="0" 
            launcher:x="3" 
            launcher:y="3" />

        <!--  screen [1]  -->
        <!-- .WidgetProvider42 -->
        <appwidget
            launcher:packageName="com.sec.android.widgetapp.samsungapps" 
            launcher:className="com.sec.android.widgetapp.samsungapps.WidgetProvider42" 
            launcher:screen="1" 
            launcher:x="0" 
            launcher:y="0" 
            launcher:spanX="4" 
            launcher:spanY="1" />


        <!-- com.baidu.searchbox.SearchWidgetProvider -->
        <appwidget
            launcher:packageName="com.baidu.searchbox_samsung" 
            launcher:className="com.baidu.searchbox.SearchWidgetProvider" 
            launcher:screen="1" 
            launcher:x="0" 
            launcher:y="2" 
            launcher:spanX="4" 
            launcher:spanY="1" />
			
        <!-- S Roaming -->
        <favorite
            launcher:packageName="com.samsung.android.globalroaming" 
            launcher:className="com.samsung.android.globalroaming.activity.StartingActivity" 
            launcher:screen="1" 
            launcher:x="0" 
            launcher:y="3" />

        <!-- Theme Store -->
        <favorite
            launcher:packageName="com.samsung.android.themestore" 
            launcher:className="com.samsung.android.themestore.activity.Launcher" 
            launcher:screen="1" 
            launcher:x="1" 
            launcher:y="3" />

        <!-- Word -->
        <favorite
            launcher:packageName="com.microsoft.office.word" 
            launcher:className="com.microsoft.office.apphost.LaunchActivity" 
            launcher:screen="1" 
            launcher:x="2" 
            launcher:y="3" />

        <!-- Folder : Microsoft apps -->
        <folder
            launcher:screen="1" 
            launcher:title="Microsoft 应用程序" 
            launcher:x="3" 
            launcher:y="3" >
            <!-- Excel -->
            <favorite
                launcher:screen="0" 
                launcher:packageName="com.microsoft.office.excel" 
                launcher:className="com.microsoft.office.apphost.LaunchActivity" />
            <!-- PowerPoint -->
            <favorite
                launcher:screen="1" 
                launcher:packageName="com.microsoft.office.powerpoint" 
                launcher:className="com.microsoft.office.apphost.LaunchActivity" />
            <!-- OneNote -->
            <favorite
                launcher:screen="2" 
                launcher:packageName="com.microsoft.office.onenote" 
                launcher:className="com.microsoft.office.onenote.ui.ONMSplashActivity" />
        </folder> 


    </home> 

    <!-- Hotseat (We use the screen as the position of the item in the hotseat) -->
    <hotseat>
        <!-- Phone -->
        <favorite
            launcher:packageName="com.android.contacts" 
            launcher:className="com.android.dialer.DialtactsActivity" 
            launcher:screen="0" />

        <!-- Contacts -->
        <favorite
            launcher:packageName="com.android.contacts" 
            launcher:className="com.android.contacts.activities.PeopleActivity" 
            launcher:screen="1" />

        <!-- Messages -->
        <favorite
            launcher:packageName="com.android.mms" 
            launcher:className="com.android.mms.ui.ConversationComposer" 
            launcher:screen="2" />

    </hotseat> 

</favorites> 